.createContact
	position fixed
	display flex
	justify-content center
	align-items center
	left 0
	top 0
	width 100vw
	height 100vh
	background-color rgba(0, 0, 0, .5)
	transition .3s
	opacity 0
	visibility hidden
	&.open
		transition .3s
		opacity 1
		visibility visible
	.wrapper
		width 300px
		position relative
		margin 0 auto
		display flex
		flex-direction column
		padding 10px
		border-radius 8px
		background-color white
		input,
		button
			margin 10px 0
		.closeModal
			cursor pointer
			font-size 30px
			transform rotate(45deg)
			color #f49898
			outline 0
			position absolute
			top 10px
			right 10px
			border 0
			background transparent